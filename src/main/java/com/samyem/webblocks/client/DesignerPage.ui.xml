<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:com.samyem.webblocks.client"	
	>
    <ui:style>        
        .southPanel {
            background-color: #010101;
            color: white;
            font-family: monospace;
        }
        .docPanel{
			overflow: visible !important;
		}
    </ui:style>

	<g:SplitLayoutPanel>
	      <g:center>				
		     <g:DockLayoutPanel unit='EM'>
		       <g:north size='2'>
		         <g:FlowPanel >
					<g:MenuBar animationEnabled="true" autoOpen="true">
						<g:MenuItem text="File">
							<g:MenuBar vertical="true">
								<g:MenuItem text="New (Ctrl+N)"/>
								<g:MenuItem text="Open (Ctrl+F)"/>
								<g:MenuItem text="Save (Ctrl+S)"/>
								<g:MenuItem text="Exit"/>
							</g:MenuBar>							
						</g:MenuItem>						
						<g:MenuItem text="Edit">
							<g:MenuBar vertical="true">
								<g:MenuItem text="Undo"/>
								<g:MenuItem text="Redo"/>
								<g:MenuItemSeparator/>
								<g:MenuItem text="Cut"/>
								<g:MenuItem text="Copy"/>
								<g:MenuItem text="Paste"/>
								<g:MenuItem text="Delete"/>
							</g:MenuBar>							
						</g:MenuItem>
						<g:MenuItem text="Project">
							<g:MenuBar vertical="true">
								<g:MenuItem text="Run (F5)" />
								<g:MenuItem text="Configure"/>
							</g:MenuBar>							
						</g:MenuItem>
						<g:MenuItem text="Help"/>							
					</g:MenuBar>		         
		         
		           	<g:Label>Top panel info here..</g:Label>
		         </g:FlowPanel>
		       </g:north>
		
		       <g:center type="g:SingleChildWidgetType">
		       	<g:TabLayoutPanel barHeight="3" barUnit="EM" ui:field="tabs">
		       		<g:tab>
		       			<g:header>Design</g:header>
		     			<g:SplitLayoutPanel>
					       <g:west size='100'>
					         <g:FlowPanel ui:field="palletPanel">
					         	<w:ComponentPallet ui:field="pallet"></w:ComponentPallet>
					         </g:FlowPanel>
					       </g:west>
		       				<g:center type="g:SingleChildWidgetType">
						       	<g:ScrollPanel ui:field="documentCanvas">
						       		<g:AbsolutePanel height="100%" ui:field="docPanel" styleName="{style.docPanel}">
						       		</g:AbsolutePanel>
						       	</g:ScrollPanel>
		       				</g:center>
		       				
					       <g:east size='250'>
							 <g:FlexTable ui:field="propertyGrid">
							 </g:FlexTable>
					       </g:east>     
		       				
		     			</g:SplitLayoutPanel>
		       		</g:tab>
		       		<g:tab>
		       			<g:header>Code</g:header>
			         	<w:CodeEditor ui:field="codeEditor"></w:CodeEditor>		       			
		       		</g:tab>
		       	</g:TabLayoutPanel>
		       </g:center>
		     </g:DockLayoutPanel>
		</g:center>
		<g:south size="100">
	        <g:FlowPanel styleName="{style.southPanel}">
	          <g:Label>Console</g:Label>
	        </g:FlowPanel>
		</g:south>
	</g:SplitLayoutPanel>
</ui:UiBinder>